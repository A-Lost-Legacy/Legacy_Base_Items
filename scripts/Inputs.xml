    <preset>
        <input name="UALegacyToggleHood">
            <btn name="kO"/>
            <event name="hold"/>
        </input>
        <input name="UALegacyMoveUp">
            <btn name="kUp"/>
            <event name="press"/>
        </input>
        <input name="UALegacyMoveDown">
            <btn name="kDown"/>
            <event name="press"/>
        </input>
        <input name="UALegacyMoveLeft">
            <btn name="kLeft"/>
            <event name="press"/>
        </input>
        <input name="UALegacyMoveRight">
            <btn name="kRight"/>
            <event name="press"/>
        </input>
        <input name="UALegacyMoveForward">
            <btn name="kW"/>
            <event name="press"/>
        </input>
        <input name="UALegacyMoveBack">
            <btn name="kS"/>
            <event name="press"/>
        </input>
    </preset>
</modded_inputs>
