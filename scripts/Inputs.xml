<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<modded_inputs>
    <inputs>
        <actions>
            <input name="UALegacyToggleHood" loc="Toggle Hood"/>
            <input name="UALegacyMoveUp" loc="Move Hologram Up"/>
            <input name="UALegacyMoveDown" loc="Move Hologram Down"/>
            <input name="UALegacyMoveLeft" loc="Move Hologram Left"/>
            <input name="UALegacyMoveRight" loc="Move Hologram Right"/>
            <input name="UALegacyMoveForward" loc="Move Hologram Forward"/>
            <input name="UALegacyMoveBack" loc="Move Hologram Back"/>
        </actions>

        <sorting name="Legacy" loc="Legacy">
            <input name="UALegacyToggleHood"/>
            <input name="UALegacyMoveUp"/>
            <input name="UALegacyMoveDown"/>
            <input name="UALegacyMoveLeft"/>
            <input name="UALegacyMoveRight"/>
            <input name="UALegacyMoveForward"/>
            <input name="UALegacyMoveBack"/>
        </sorting>
